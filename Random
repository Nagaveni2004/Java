RANDOM INTEGER
import java.util.Random;
public class Main {
    public static void main(String[] args){
        Random random=new Random();
        int number;
        number=random.nextInt(1,7);
        System.out.print(number);
    }
}

//OUTPUT
a)1
b)2
c)6

GENERATING 3 RANDOM INTEGERS
import java.util.Random;
public class Main {
    public static void main(String[] args){
        Random random=new Random();

        int number1;
        int number2;
        int number3;

        number1=random.nextInt(1,50);
        number2=random.nextInt(1,50);
        number3=random.nextInt(1,50);
        System.out.println(number1);
        System.out.println(number2);
        System.out.println(number3);
    }
}

//OUTPUT
a)40
  14
  36
b)18
  30
  6

DOUBLE
import java.util.Random;
public class Main {
    public static void main(String[] args){
        Random random=new Random();
        double number;
        number = random.nextDouble();
        System.out.println(number);
    }
}

//OUTPUT
a)0.8973135840941291
b)0.42379223273331845
c)0.45053492868221057


BOOLEAN
import java.util.Random;
public class Main {
    public static void main(String[] args){
        Random random=new Random();
        boolean isHeads;
        isHeads = random.nextBoolean();
        System.out.print(isHeads);
    }
}

//OUTPUT:
a)true
b)true
c)false


